<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SwitchPreferenceCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="theme"
        android:icon="@drawable/ic_round_clocl"
        android:switchTextOn="Dark Theme"
        android:switchTextOff="Light Theme"
        android:summaryOff="Light Theme"
        android:summaryOn="Dark Theme"
        android:summary="Change the colour's of this app"
        android:title="Theme" />

</androidx.preference.PreferenceScreen>